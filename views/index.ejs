<!DOCTYPE html>
<html>
    <head>
        <title>Tendencys Exam</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/public/css/main.css">
      </head>


      <body>
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: rgb(0, 183, 255);">
            <div class="container-fluid">
              <a class="navbar-brand" href="#" style="color: aliceblue;">Tendencys Exam</a>
              <h4 id="guides" style="color: aliceblue;">Guides: </h4>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              
            </div>
        </nav>
        <div class="container" style="padding: 1%;">
            <h2 style="color: rgb(0, 183, 255);">Create new guide</h2>
        </div>
        <div class="container" style="padding: 0.5%;">
            
            <h3 style="color: gray;">Origin</h3>
            
            <form id="form">
                <label for="txtName" style="color: rgb(145, 5, 5);">*</label>Name:
                <input class="form-control" name="txtName" id="txtName" autocomplete="off" />
                <label for="txtCompany"style="color: rgb(145, 5, 5);">*</label>Company:
                <input class="form-control" name="txtCompany" id="txtCompany" autocomplete="off" />

                <label for="txtEmail"style="color: rgb(145, 5, 5);">*</label>Email:
                <input class="form-control" name="txtEmail" id="txtEmail" autocomplete="off" />

                <label for="txtPhone"style="color: rgb(145, 5, 5);">*</label>Phone:
                <input class="form-control" name="txtPhone" id="txtPhone" autocomplete="off" />

                <label for="txtStreet"style="color: rgb(145, 5, 5);">*</label>Street:
                <input class="form-control" name="txtStreet" id="txtStreet" autocomplete="off" />

                <label for="txtNumber"style="color: rgb(145, 5, 5);">*</label>Number:
                <input class="form-control" name="txtNumber" id="txtNumber" autocomplete="off" />

                <label for="txtDistrict"style="color: rgb(145, 5, 5);">*</label>District:
                <input class="form-control" name="txtDistrict" id="txtDistrict" autocomplete="off" />

                <label for="txtCity"style="color: rgb(145, 5, 5);">*</label>City:
                <input class="form-control" name="txtCity" id="txtCity" autocomplete="off" />

                <label for="cmbState"style="color: rgb(145, 5, 5);">*</label>State:
                <select class="form-control" name="cmbState" id="cmbState">
                    <option value="-1">Choose one...</option>
                    <%data.datastates.forEach(result=>{ %>
                        <option value=""><%= result.name %></option>
                    <%});%>
                    
                </select>
                
                <label for="cmbCountry"style="color: rgb(145, 5, 5);">*</label>Country:
                <select class="form-control" name="cmbCountry" id="cmbCountry">
                    <option value="-1">Choose one...</option>
                    <%data.datacountry.forEach(result=>{ %>
                        <option value=""><%= result.name %></option>
                    <%});%>
                </select>
                <br>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-block btn-success" onclick="clickSend()" >Send -></button>
                </div>
            </form>
        </div>
        
        <footer style="padding: 3%; background-color: slategrey;">
          
        </footer>

        <script src="/socket.io/socket.io.js"></script>
        
        
        <script>
            var socket = io();
            var guid = document.getElementById('guides');
            var form = document.getElementById('form');
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                    socket.emit('newGuide', 1);
            });
            
            socket.on('newGuide', function(guide) {
                alert("Numero de gu√≠as: "+guide);
                guid = guide;
            });
            
        </script>
        
      </body>

      
      


</html>